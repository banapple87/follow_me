<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 위치 권한 추가 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FollowMe"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- LoginActivity를 런처 액티비티로 설정 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.FollowMe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".InfoSelectionActivity" />

        <!-- MainActivity 설정 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FollowMe" />

        <activity
            android:name=".SelectionActivity"
            android:exported="true" />

        <activity
            android:name=".CategorySelectionActivity"
            android:exported="true" />

        <activity
            android:name=".StyleSelectionActivity"
            android:exported="true" />

        <!-- 네이버 지도 API 키 설정 -->
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="hc97canjmp" />
    </application>

</manifest>
